@{
    ViewData["Title"] = "Country Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*@using AddressBook_Multi.Areas.Country.Models;
@model Country*@
@model AddressBook_Multi.Areas.Country.Models.CountryModel;

<section class="vh-100 bg-image"
         style="background-image: url('https://wallpaperaccess.com/full/1134824.png');">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">ADD DATA</h2>
                            <h5 class="text-uppercase text-center mb-5" style="background: linear-gradient(to bottom, #ff99ff 0%, #9966ff 100%)">@TempData["Msg"]</h5>
                            
                            <form method="post" asp-area="Country" asp-controller="Country" asp-action="Save" enctype="multipart/form-data">
                                @Html.HiddenFor(x=>x.CountryID)
                               @* @Html.HiddenFor(x=>x.PhotoPath)*@
                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example1cg"><span class="text-danger">*</span><strong>Country Name</strong></label>
                                    <input type="text" asp-for="CountryName" id="form3Example1cg" class="form-control form-control-lg" />
                                    <span asp-validation-for="CountryName" class="text-danger"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example3cg"><span class="text-danger">*</span><strong>Country Code</strong></label>
                                    <input type="text" asp-for="CountryCode" id="form3Example3cg" class="form-control form-control-lg" />
                                    <span asp-validation-for="CountryCode" class="text-danger"></span>
                                </div>

                                @*<div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example3cg"><strong>Photo Path</strong></label>
                                    <input type="file" asp-for="File" class="form-control form-control-lg" placeholder="Select File"/>
                                </div>*@

                                @*<div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example4cg"><strong>Creation Date</strong></label>
                                    <input type="date" asp-for="CreationDate" id="form3Example4cg" class="form-control form-control-lg" />
                                </div>

                                <div class="form-outline mb-4">
                                    <label class="form-label" for="form3Example4cg"><strong>Modification Date</strong></label>
                                    <input type="date" asp-for="ModificationDate" id="form3Example4cg" class="form-control form-control-lg" />
                                </div>*@

                                <div class="d-flex mt-5">
                                    <div>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                    <div class="mx-3">
                                        <a asp-controller="Country" asp-area="Country" asp-action="Index" class="btn btn-danger">Cancel</a>
                                    </div>                                                                     
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

